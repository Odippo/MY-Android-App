<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:textStyle="bold|italic"
        android:textColor="#2196F3"
        android:gravity="center"
        android:textSize="40sp"
        android:id="@+id/mTvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to Android Programming" />

    <TextView
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"
        android:paddingLeft="16dp"
        android:textColor="#975E0A"
        android:textSize="20sp"
        android:id="@+id/mTvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the most lucrative course bla bla blaThis is the most lucrative course bla bla blaThis is the most lucrative course bla bla blaThis is the most lucrative course bla bla blaThis is the most lucrative course bla bla blaThis is the most lucrative course bl" />

    <Button
        android:textAllCaps="false"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#F5F8F7"
        android:backgroundTint="#2196F3"
        android:id="@+id/mBtnReg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register" />

    <Button
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textColor="#E5E4EA"
        android:backgroundTint="#123"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="120dp"
        android:layout_marginTop="20dp"
        android:id="@+id/mBtnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login" />
</LinearLayout>